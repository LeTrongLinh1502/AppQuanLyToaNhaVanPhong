<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/imgthanhtoan"
            android:src="@drawable/ic_da_thanhtoan"
            android:scaleType="centerCrop"
            android:layout_width="70dp"
            android:layout_height="135dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvMaHoaDon"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_button"
                    android:text="Mã hóa đơn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:weightSum="5">
                    <TextView
                        android:id="@+id/tvTinhTrang"
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tình trạng"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvTienThanhToan"
                        android:layout_width="130dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="64.000đ"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>
                <TextView
                    android:id="@+id/tvTenKH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên khách hàng"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tvLoaiHD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại hóa đơn"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tvNgayTao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày tạo hóa đơn"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tvHanDong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hạn đóng"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvHinhThucThanhToan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hình thức thanh toán"
                    android:textSize="14dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:elevation="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btnthanhtoan"
        android:text="Thanh toán"
        android:textColor="@color/white"
        android:layout_gravity="right|bottom"
        android:textSize="16sp"
        android:background="@drawable/bg_add_cart"
        android:textAllCaps="false"
        android:layout_width="104dp"
        android:layout_height="34dp"/>

</androidx.cardview.widget.CardView>